    <!-- Shopping Cart -->
    <button class="cart-btn">
        <i class="fas fa-shopping-cart"></i>
        <span class="cart-count">0</span>
    </button>

    <div class="cart-section">
        <div class="cart-header">
            <h3>Your Cart</h3>
            <button class="close-cart">&times;</button>
        </div>
        
        <div class="cart-items">
            <!-- Cart items will be added here dynamically -->
        </div>
        
        <div class="cart-summary">
            <div class="promo-box">
                <div class="promo-input">
                    <input type="text" placeholder="Enter promo code" class="promo-code">
                    <button class="apply-promo">Apply</button>
                </div>
            </div>
            
            <div class="cart-total">
                <span>Total:</span>
                <span>$<span class="total-amount">0</span></span>
            </div>
            
            <button class="checkout-btn" id="checkout-btn">
                <span class="btn-text">PROCEED TO CHECKOUT</span>
                <div class="spinner"></div>
            </button>
            
            <div id="paypal-button-container"></div>
            
            <button class="download-btn" id="download-btn">
                <i class="fas fa-download"></i> DOWNLOAD FILES
            </button>
        </div>
    </div>

    <script>
        // Shopping Cart Functionality
        document.addEventListener('DOMContentLoaded', function() {
            // DOM Elements
            const cartBtn = document.querySelector('.cart-btn');
            const cartSection = document.querySelector('.cart-section');
            const closeCart = document.querySelector('.close-cart');
            const addToCartBtns = document.querySelectorAll('.add-to-cart');
            const cartItemsContainer = document.querySelector('.cart-items');
            const cartCount = document.querySelector('.cart-count');
            const totalAmount = document.querySelector('.total-amount');
            const applyPromoBtn = document.querySelector('.apply-promo');
            const promoCodeInput = document.querySelector('.promo-code');
            const checkoutBtn = document.getElementById('checkout-btn');
            const downloadBtn = document.getElementById('download-btn');
            const paypalButtonContainer = document.getElementById('paypal-button-container');
            const spinner = document.querySelector('.spinner');
            const btnText = document.querySelector('.btn-text');
            
            // State Variables
            let cart = [];
            let total = 0;
            let paymentVerified = false;
            let currentUser = null;
            
            // Product download URLs
            const productDownloads = {
                'Foundation': 'https://your-download-server.com/foundation.zip',
                'PC Checkup': 'https://your-download-server.com/checkup.zip',
                'Console Booster': 'https://your-download-server.com/console-booster.zip',
                'Stream Setup': 'https://your-download-server.com/stream-setup.zip',
                'Data PC Setup': 'https://your-download-server.com/data-pc.zip',
                'Network Services': 'https://your-download-server.com/network-tweaks.zip',
                'OC Bundle': 'https://your-download-server.com/oc-bundle.zip',
                'RAM Overclock': 'https://your-download-server.com/ram-oc.zip',
                'CPU Overclock': 'https://your-download-server.com/cpu-oc.zip'
            };
            
            // Discord support link
            const discordSupportLink = 'https://discord.gg/your-invite-code';
            
            // Toggle cart visibility
            cartBtn.addEventListener('click', () => {
                cartSection.classList.add('active');
            });
            
            closeCart.addEventListener('click', () => {
                cartSection.classList.remove('active');
            });
            
            // Add to cart functionality
            addToCartBtns.forEach(btn => {
                btn.addEventListener('click', () => {
                    const name = btn.getAttribute('data-name');
                    const price = parseFloat(btn.getAttribute('data-price'));
                    
                    // Check if item already in cart
                    const existingItem = cart.find(item => item.name === name);
                    
                    if (existingItem) {
                        existingItem.quantity += 1;
                    } else {
                        cart.push({
                            name,
                            price,
                            quantity: 1,
                            isPromo: false
                        });
                    }
                    
                    updateCart();
                    cartSection.classList.add('active');
                    
                    // Animate cart button
                    cartBtn.classList.add('animate__animated', 'animate__rubberBand');
                    setTimeout(() => {
                        cartBtn.classList.remove('animate__animated', 'animate__rubberBand');
                    }, 1000);
                    
                    // Show notification
                    showNotification(`Added ${name} to your cart`);
                });
            });
            
            // Apply promo code
            applyPromoBtn.addEventListener('click', () => {
                const promoCode = promoCodeInput.value.trim().toUpperCase();
                let discountMessage = '';
                
                if (promoCode === 'CRMSN') {
                    if (cart.length > 1) {
                        // Apply 75% discount for bundles
                        cart.forEach(item => {
                            if (!item.isPromo) {
                                item.discountedPrice = item.price * 0.25;
                            }
                        });
                        discountMessage = '75% discount applied (CRMSN bundle discount)';
                    } else if (cart.length === 1) {
                        // Apply 50% discount for single item
                        cart.forEach(item => {
                            if (!item.isPromo) {
                                item.discountedPrice = item.price * 0.5;
                            }
                        });
                        discountMessage = '50% discount applied (CRMSN single item discount)';
                    }
                } else if (promoCode === 'CNTEAM') {
                    // CNTEAM PROMO: Add 2 free products
                    const freeProducts = ['Foundation', 'Console Booster'];
                    let addedProducts = [];
                    
                    freeProducts.forEach(product => {
                        if (!cart.some(item => item.name === product)) {
                            cart.push({
                                name: product,
                                price: 0,
                                discountedPrice: 0,
                                quantity: 1,
                                isPromo: true
                            });
                            addedProducts.push(product);
                        }
                    });
                    
                    if (addedProducts.length > 0) {
                        discountMessage = `Added free: ${addedProducts.join(', ')} (CNTEAM promo)`;
                    } else {
                        discountMessage = 'CNTEAM products already added';
                    }
                } else if (promoCode) {
                    discountMessage = 'Invalid promo code';
                }
                
                updateCart();
                
                if (discountMessage) {
                    showNotification(discountMessage);
                }
            });
            
            // Checkout functionality with PayPal
            checkoutBtn.addEventListener('click', async () => {
                if (cart.length === 0) {
                    showNotification('Your cart is empty!', 'error');
                    return;
                }
                
                // Show loading state
                checkoutBtn.disabled = true;
                btnText.textContent = 'Processing...';
                spinner.style.display = 'block';
                
                try {
                    // Create payment intent
                    const response = await fetch('/.netlify/functions/create-payment', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            items: cart,
                            total: total,
                            email: currentUser ? currentUser.email : 'customer@example.com'
                        })
                    });

                    const data = await response.json();
                    
                    if (data.error) {
                        throw new Error(data.error);
                    }

                    // Initialize PayPal buttons
                    paypal.Buttons({
                        createOrder: () => data.id,
                        onApprove: async (data) => {
                            const verification = await fetch('/.netlify/functions/verify-payment', {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ orderID: data.orderID })
                            });
                            
                            const result = await verification.json();
                            if (result.success) {
                                // Payment complete
                                paymentVerified = true;
                                checkoutBtn.style.backgroundColor = '#00c853';
                                btnText.textContent = 'Payment Verified!';
                                downloadBtn.style.display = 'flex';
                                
                                // Show success notification
                                showNotification('Payment successful! You can now download your files', 'success');
                            } else {
                                throw new Error('Verification failed');
                            }
                        },
                        onError: (err) => {
                            console.error('PayPal error:', err);
                            checkoutBtn.disabled = false;
                            btnText.textContent = 'PROCEED TO CHECKOUT';
                            spinner.style.display = 'none';
                            showNotification('Payment failed: ' + err.message, 'error');
                        }
                    }).render('#paypal-button-container');
                    
                    // Show PayPal buttons
                    paypalButtonContainer.style.display = 'block';
                    checkoutBtn.disabled = false;
                    btnText.textContent = 'PAY WITH PAYPAL';
                    spinner.style.display = 'none';

                } catch (error) {
                    console.error('Checkout error:', error);
                    checkoutBtn.disabled = false;
                    btnText.textContent = 'PROCEED TO CHECKOUT';
                    spinner.style.display = 'none';
                    showNotification('Error: ' + error.message, 'error');
                }
            });
            
            // Download functionality
            downloadBtn.addEventListener('click', () => {
                if (!paymentVerified) {
                    showNotification('Please complete your purchase first', 'error');
                    return;
                }
                
                // Open download links for each product in the cart
                let productsDownloaded = false;
                
                cart.forEach(item => {
                    if (productDownloads[item.name]) {
                        window.open(productDownloads[item.name], '_blank');
                        productsDownloaded = true;
                    }
                });
                
                // Also open Discord support
                window.open(discordSupportLink, '_blank');
                
                if (!productsDownloaded) {
                    showNotification('No download links available for the products in your cart', 'error');
                }
            });
            
            // Update cart display
            function updateCart() {
                // Clear current items
                cartItemsContainer.innerHTML = '';
                
                // Reset total
                total = 0;
                
                // Add each item to cart display
                cart.forEach(item => {
                    // Calculate item total
                    const itemPrice = item.discountedPrice !== undefined ? item.discountedPrice : item.price;
                    const itemTotal = itemPrice * item.quantity;
                    total += itemTotal;
                    
                    const cartItemElement = document.createElement('div');
                    cartItemElement.classList.add('cart-item');
                    cartItemElement.innerHTML = `
                        <div class="cart-item-info">
                            <div class="cart-item-name">
                                ${item.name} 
                                ${item.isPromo ? '<span class="promo-tag">FREE</span>' : ''}
                                ${item.discountedPrice !== undefined && !item.isPromo ? '<span class="promo-tag">DISCOUNTED</span>' : ''}
                            </div>
                            <div class="cart-item-price">$${itemTotal.toFixed(2)}</div>
                            <div class="cart-item-quantity">
                                <button class="quantity-btn minus" data-name="${item.name}">-</button>
                                <span>${item.quantity}</span>
                                <button class="quantity-btn plus" data-name="${item.name}">+</button>
                            </div>
                        </div>
                        <button class="remove-item" data-name="${item.name}">
                            <i class="fas fa-times"></i>
                        </button>
                    `;
                    cartItemsContainer.appendChild(cartItemElement);
                });
                
                // Add event listeners to new elements
                document.querySelectorAll('.remove-item').forEach(btn => {
                    btn.addEventListener('click', () => {
                        const name = btn.getAttribute('data-name');
                        cart = cart.filter(item => item.name !== name);
                        updateCart();
                        showNotification(`Removed ${name} from cart`);
                    });
                });
                
                document.querySelectorAll('.quantity-btn.minus').forEach(btn => {
                    btn.addEventListener('click', () => {
                        const name = btn.getAttribute('data-name');
                        const item = cart.find(item => item.name === name);
                        if (item.quantity > 1) {
                            item.quantity -= 1;
                        } else {
                            cart = cart.filter(item => item.name !== name);
                        }
                        updateCart();
                    });
                });
                
                document.querySelectorAll('.quantity-btn.plus').forEach(btn => {
                    btn.addEventListener('click', () => {
                        const name = btn.getAttribute('data-name');
                        const item = cart.find(item => item.name === name);
                        item.quantity += 1;
                        updateCart();
                    });
                });
                
                // Update total and cart count
                totalAmount.textContent = total.toFixed(2);
                cartCount.textContent = cart.reduce((sum, item) => sum + item.quantity, 0);
                
                // Reset payment verification if cart changes
                if (paymentVerified) {
                    paymentVerified = false;
                    checkoutBtn.disabled = false;
                    checkoutBtn.style.backgroundColor = '';
                    btnText.textContent = 'PROCEED TO CHECKOUT';
                    downloadBtn.style.display = 'none';
                    paypalButtonContainer.style.display = 'none';
                    paypalButtonContainer.innerHTML = '';
                }
            }
            
            // Show notification function
            function showNotification(message, type = 'success') {
                const notification = document.createElement('div');
                notification.className = `notification ${type}`;
                notification.textContent = message;
                
                document.body.appendChild(notification);
                
                // Position notification
                notification.style.position = 'fixed';
                notification.style.bottom = '30px';
                notification.style.left = '50%';
                notification.style.transform = 'translateX(-50%)';
                notification.style.backgroundColor = type === 'error' ? '#ff3b3b' : '#00c853';
                notification.style.color = '#fff';
                notification.style.padding = '15px 30px';
                notification.style.borderRadius = '8px';
                notification.style.boxShadow = '0 5px 15px rgba(0,0,0,0.3)';
                notification.style.zIndex = '9999';
                notification.style.opacity = '0';
                notification.style.transition = 'opacity 0.3s, transform 0.3s';
                
                // Animate in
                setTimeout(() => {
                    notification.style.opacity = '1';
                    notification.style.transform = 'translateX(-50%) translateY(-10px)';
                }, 10);
                
                // Remove after 3 seconds
                setTimeout(() => {
                    notification.style.opacity = '0';
                    notification.style.transform = 'translateX(-50%) translateY(20px)';
                    setTimeout(() => {
                        document.body.removeChild(notification);
                    }, 300);
                }, 3000);
            }
            
            // Initialize animations on scroll
            const animateOnScroll = () => {
                const elements = document.querySelectorAll('.service-card, .section-title, .partner-card, .faq-item');
                const windowHeight = window.innerHeight;
                
                elements.forEach(element => {
                    const elementTop = element.getBoundingClientRect().top;
                    
                    if (elementTop < windowHeight - 100) {
                        element.style.opacity = '1';
                        element.style.transform = 'translateY(0)';
                    }
                });
            };
            
            // Set initial state for animated elements
            document.querySelectorAll('.service-card, .section-title, .partner-card, .faq-item').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(30px)';
                el.style.transition = 'opacity 0.6s ease-out, transform 0.6s ease-out';
            });
            
            // Run on load and scroll
            window.addEventListener('load', animateOnScroll);
            window.addEventListener('scroll', animateOnScroll);
        });
    </script>
</body>
</html>
